{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}, {
			"path": "pages/eatting/eatting",
			"style": {
				"navigationBarTitleText": "食话",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/eat_help/eat_help",
			"style": {
				"navigationBarTitleText": "帮助",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#1296db",
		"backgroundColor": "#f3f3f3"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#1296db",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tab/index.png",
				"selectedIconPath": "static/tab/index-h.png"
			},
			{
				"pagePath":"pages/eatting/eatting",
				"text":"食话",
				"iconPath":"static/tab/topic.png",
				"selectedIconPath":"static/tab/topic-h.png"
			},
			{
				"pagePath":"pages/eat_help/eat_help",
				"text":"帮助",
				"iconPath":"static/tab/help.png",
				"selectedIconPath":"static/tab/help-h.png"
			},
			{
				"pagePath":"pages/mine/mine",
				"text":"我的",
				"iconPath":"static/tab/mine.png",
				"selectedIconPath":"static/tab/mine-h.png"
			}
		]
	}
}
